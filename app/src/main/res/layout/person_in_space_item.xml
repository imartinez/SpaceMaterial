<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="272dp"
    android:layout_margin="1dp">

  <ImageView android:id="@+id/photo_imageview"
      android:layout_width="match_parent"
      android:layout_height="204dp"
      android:background="@color/grey"
      android:scaleType="centerCrop" />

  <RelativeLayout
      android:id="@+id/text_container_view"
      android:layout_width="match_parent"
      android:layout_height="68dp"
      android:paddingLeft="16dp"
      android:paddingTop="16dp"
      android:paddingRight="8dp"
      android:orientation="vertical"
      android:background="@color/darkGrey" android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true">

    <ImageView
        android:id="@+id/flag_imageview"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignBottom="@+id/name_textview"
        android:layout_alignParentTop="true"
        android:layout_marginRight="4dp"
        tools:src="@drawable/ic_placeholder"/>

    <TextView
        android:id="@+id/name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        tools:text="Peggy Whitson" android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/flag_imageview"/>

    <TextView
        android:id="@+id/location_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:maxLines="1"
        tools:text="International Space Station" android:layout_below="@+id/name_textview"
        android:layout_alignParentStart="true"/>

  </RelativeLayout>

</RelativeLayout>